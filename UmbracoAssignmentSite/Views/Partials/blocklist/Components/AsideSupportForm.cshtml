@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoAssignmentSite.ViewModels;

@{
    var content = (ContentModels.AsideSupportForm)Model.Content;
    var formVm = new AsideSupportFormViewModel();
}

<div class="bg-primary px-6 py-6 text-white shadow-lg">
    <h3 class="text-lg font-semibold mb-1">
        @content.AsideSupportFormTitle
    </h3>

    <p class="text-xs mb-4">
        @content.AsideSupportDesc
    </p>

    <partial name="Partials/Forms/_AsideSupportForm" model="formVm" />
</div>
